<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:layout_marginLeft="0dp"
        android:layout_width="530dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/detail_imageView4"
            android:layout_width="530dp"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </FrameLayout>
    <LinearLayout
        android:layout_marginRight="0dp"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="529dp"
        tools:layout_editor_absoluteY="-16dp">
        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/detail_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="title"
            android:textColor="@color/orange"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/detail_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="date"
            android:textColor="@color/orange"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/detail_text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="description"
            android:textColor="@color/orange"
            android:textSize="18sp" />
    </LinearLayout>
    <Button
        android:id="@+id/detail_changebutton"
        tools:layout_editor_absoluteX="630dp"
        tools:layout_editor_absoluteY="350dp"
        android:layout_width="78dp"
        android:layout_height="32dp"
        android:text="change"
        android:textSize="10dp"
        tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>