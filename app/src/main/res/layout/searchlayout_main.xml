<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/walk"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/search_title"
        android:text="Title："
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/search_date"
        android:text="Date："
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/search_title"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/search_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please enter a title"
        android:textSize="20sp"
        android:paddingTop="0dp"
        app:layout_constraintTop_toTopOf="@id/search_title"
        app:layout_constraintLeft_toRightOf="@+id/search_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        />
    <EditText
        android:id="@+id/search_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        tools:ignore="MissingConstraints"
        android:text="Please enter a date"
        android:textSize="20sp"
        android:paddingTop="0dp"
        app:layout_constraintTop_toTopOf="@id/search_date"
        app:layout_constraintLeft_toRightOf="@+id/search_date"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp" />
    <Button
        android:id="@+id/searchlayout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="484dp" />

</androidx.constraintlayout.widget.ConstraintLayout>