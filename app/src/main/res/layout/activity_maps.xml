<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/visit_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        app:cornerRadius="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        app:backgroundTint="@color/white"
        android:text="@string/main_list_button_text"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:textSize="15sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        app:cornerRadius="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        app:backgroundTint="@color/white"
        android:text="@string/main_list_button_text"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:textSize="15sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_list_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        app:cornerRadius="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="104dp"
        app:backgroundTint="@color/white"
        android:text="@string/main_list_button_text"
        android:textColor="@color/black"
        android:textSize="15sp" />

<!--    <include layout="@layout/preview_photo_list" />-->
    <HorizontalScrollView
        android:id="@+id/maps_horizon"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/maps_linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/maps_horizon"
                android:layout_marginBottom="0dp" />

        </RelativeLayout>